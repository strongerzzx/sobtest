<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_par_avator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_parent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="name"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iv_par_avator"
        app:layout_constraintTop_toTopOf="@+id/iv_par_avator" />


    <TextView
        android:id="@+id/tv_par_publish_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="111"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_parent_name"
        app:layout_constraintStart_toEndOf="@+id/tv_parent_name"
        app:layout_constraintTop_toTopOf="@+id/tv_parent_name" />


    <ImageView
        android:id="@+id/iv_par_reply"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:src="@mipmap/ic_reply"
        app:layout_constraintBottom_toBottomOf="@+id/tv_par_publish_timer"
        app:layout_constraintStart_toEndOf="@+id/tv_par_publish_timer"
        app:layout_constraintTop_toTopOf="@+id/tv_par_publish_timer" />


    <TextView
        android:id="@+id/tv_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="222"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/iv_par_avator"
        app:layout_constraintTop_toBottomOf="@+id/iv_par_avator" />


    <com.example.views.VerCommentView
        android:id="@+id/child_comment_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/app_comment_bg"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="@+id/iv_par_avator"
        app:layout_constraintTop_toBottomOf="@+id/tv_parent" />


</androidx.constraintlayout.widget.ConstraintLayout>