<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/iv_mo_yu_hot_avter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mo_yu_hot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nick"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/iv_mo_yu_hot_avter"
        app:layout_constraintTop_toTopOf="@+id/iv_mo_yu_hot_avter" />

    <TextView
        android:id="@+id/tv_mo_yu_hot_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-11"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_mo_yu_hot_avter" />

    <TextView
        android:id="@+id/tv_mo_yu_hot_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxHeight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_mo_yu_hot_avter" />

    <ImageView
        android:id="@+id/iv_mo_yu_hot_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mo_yu_hot_comment_content" />

    <TextView
        android:id="@+id/tv_mo_yu_input_hot_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_comment"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:text="评论"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_mo_yu_hot_dian_zan"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_mo_yu_hot_comment_content" />

    <TextView
        android:id="@+id/tv_mo_yu_hot_dian_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/ic_like"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:text="点赞"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mo_yu_input_hot_comment"
        app:layout_constraintEnd_toStartOf="@+id/tv_mo_yu_hot_comment_count"
        app:layout_constraintStart_toEndOf="@+id/tv_mo_yu_input_hot_comment"
        app:layout_constraintTop_toTopOf="@+id/tv_mo_yu_input_hot_comment" />


    <TextView
        android:id="@+id/tv_mo_yu_hot_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/ic_comment_count"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:text="参与数"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mo_yu_input_hot_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_mo_yu_hot_dian_zan"
        app:layout_constraintTop_toTopOf="@+id/tv_mo_yu_input_hot_comment" />


</androidx.constraintlayout.widget.ConstraintLayout>